<dl class=dl-horizontal>
  <dt>For</dt>
  <dd><%= @field_set.type_human %></dd>
</dl>

<%= form_for(@field_set,
  as: :field_set,
  url: field_set_path(@field_set),
  html: {class: 'form-horizontal'}) do |f| %>

  <%= render 'common/form_errors', o: @field_set %>
  <%= f.hidden_field :type %>

  <div class=control-group>
    <%= f.label :name, class: 'control-label' %>
    <div class=controls><%= f.text_field :name %></div>
  </div>
  <div class=control-group>
    <%= f.label :description, class: 'control-label' %>
    <div class=controls><%= f.text_field :description %></div>
  </div>
  <div class=form-actions>
    <%= f.button 'Done', class: 'btn  btn-primary' %>
    <%= link_to 'Cancel', field_sets_path, class: 'btn' %>
  </div>
<% end %>
