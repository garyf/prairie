<h4>Editing field row position</h4>

<%= render partial: 'common/field_set_name', locals: {o: @field_set} %>

<dl class=dl-horizontal>
  <dt>Custom field</dt>
  <dd><%= @custom_field.link_to_edit %></dd>
</dl>

<%= form_for(@field_row, html: {class: 'form-horizontal'}) do |f| %>
  <%= render 'common/form_errors', o: @field_row %>

  <dl class=dl-horizontal>
    <dt>Current row</dt>
    <dd><%= @field_row.human_row %></dd>
  </dl>
  <div class=control-group>
    <%= f.label 'Move to row', class: 'control-label' %>
    <div class=controls><%= f.number_field :row_position, class: 'input-mini' %></div>
  </div>
  <div class=form-actions>
    <%= f.button 'Done', class: 'btn  btn-primary' %>
    <%= @field_set.btn_to_cancel_field %>
  </div>
<% end %>
