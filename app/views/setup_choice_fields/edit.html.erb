<ul class='nav  nav-pills'>
  <li><%= link_to @choice_field.type_human, setup_choice_field_path(@choice_field) %></li>
  <li class='active'><a>Edit</a></li>
  <li><%= link_to 'Destroy', setup_choice_field_path(@choice_field), method: :delete, data: {confirm: 'Are you sure?'} %></li>
</ul>
<%= render partial: 'common/link_to_field_set', locals: {o: @field_set} %>

<%= form_for(@choice_field,
  as: :choice_field,
  url: setup_choice_field_path(@choice_field),
  html: {class: 'form-horizontal'}) do |f| %>

  <%= render partial: 'form', locals: {f: f} %>

  <div class=control-group>
    <%= f.label 'Enabled?', class: 'control-label' %>
    <div class=controls><%= f.check_box :enabled_p %></div>
  </div>

  <div class=form-actions>
    <%= f.button 'Done', class: 'btn  btn-primary' %>
    <%= @choice_field.btn_to_cancel_field(@field_set) %>
  </div>
<% end %>
