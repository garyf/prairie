<ul class='nav  nav-pills'>
  <li><%= link_to 'Edit', edit_setup_choice_field_path(@choice_field) %></li>
  <li class='active'><a><%= @choice_field.type_human %></a></li>
</ul>
<%= render partial: 'common/link_to_field_set', locals: {o: @field_set} %>

<dl class=dl-horizontal>
  <dt>Name</dt>
  <dd><%= @choice_field.name %></dd>
</dl>

<% if @choice_field.choice_new_able? %>
  <%= link_to 'New choice', new_choice_path(custom_field_id: @choice_field.id) %>
<% end %>
<h4>Choices</h4>
<% if @choices.any? %>

  <%= paginate @choices %>
  <table class='table  table-condensed'>
    <thead><tr>
      <th>Row</th>
      <th>Value</th>
    </tr></thead>
    <tbody>
      <% @choices.each_with_index do |o, i| %><tr>
        <td><%= i + @row_offset %></td>
        <td><%= o.link_to_edit @choice_field %></td>
      </tr><% end %>
    </tbody>
  </table>

<% else %>
  <h5>None</h5>
<% end %>

<%= @choice_field.instructions %>
