<h4>Listing people</h4>
<%= link_to 'New person', new_person_path %> |
<%= link_to 'New search', new_person_search_path %>

<% if @people.any? %>
  <%= paginate @people %>
  <table class='table  table-condensed'>
    <thead><tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
    </tr></thead>
    <tbody><%= render @people %></tbody>
  </table>

<% else %>
  <h5>None</h5>
<% end %>
