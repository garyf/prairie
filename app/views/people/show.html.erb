<ul class='nav  nav-pills'>
  <li><%= link_to 'Edit', edit_person_path(@person) %></li>
  <li class='active'><a>Person</a></li>
  <li><%= link_to 'Index', people_path %></li>
</ul>

<dl class=dl-horizontal>
  <dt>First name</dt>
  <dd><%= @person.name_first %></dd>
</dl>
<dl class=dl-horizontal>
  <dt>Last name</dt>
  <dd><%= @person.name_last %></dd>
</dl>
<dl class=dl-horizontal>
  <dt>Email</dt>
  <dd><%= @person.email %></dd>
</dl>
<dl class=dl-horizontal>
  <dt>Birth year</dt>
  <dd><%= @person.birth_year %></dd>
</dl>
<dl class=dl-horizontal>
  <dt>Height</dt>
  <dd><%= @person.height %></dd>
</dl>
<dl class=dl-horizontal>
  <dt>Gender</dt>
  <dd><%= @person.gender %></dd>
</dl>

<% if @field_sets.any? %>
  <h4>Custom field sets</h4>
  <% @field_sets.each do |o| %>
    <%= render partial: 'field_sets/values_for_parent', locals: {
      o: o,
      parent_id: @person.id} %>
  <% end %>
<% end %>
