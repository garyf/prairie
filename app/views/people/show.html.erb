<h4>Person</h4>
<%= link_to 'Edit', edit_person_path(@person) %>

<dl class=dl-horizontal>
  <dt>First name</dt>
  <dd><%= @person.name_first %></dd>
</dl>
<dl class=dl-horizontal>
  <dt>Last name</dt>
  <dd><%= @person.name_last %></dd>
</dl>
<dl class=dl-horizontal>
  <dt>Email</dt>
  <dd><%= @person.email %></dd>
</dl>

<% if @field_sets.any? %>
  <h5>Custom field sets</h5>
  <% @field_sets.each do |o| %>
    <%= render partial: 'field_sets/values_for_parent', locals: {
      o: o,
      parent_id: @person.id} %>
  <% end %>
<% end %>
