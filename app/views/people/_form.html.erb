<%= form_for(@person, html: {class: 'form-horizontal'}) do |f| %>
  <%= render 'common/form_errors', o: @person %>

  <div class=control-group>
    <%= f.label :name_first, class: 'control-label' %>
    <div class=controls><%= f.text_field :name_first %></div>
  </div>
  <div class=control-group>
    <%= f.label :name_last, class: 'control-label' %>
    <div class=controls><%= f.text_field :name_last %></div>
  </div>
  <div class=control-group>
    <%= f.label :email, class: 'control-label' %>
    <div class=controls><%= f.text_field :email %></div>
  </div>
  <div class=control-group>
    <%= f.label :birth_year, class: 'control-label' %>
    <div class=controls><%= f.number_field :birth_year, class: 'input-mini' %></div>
  </div>
  <div class=control-group>
    <%= f.label :height, class: 'control-label' %>
    <div class=controls><%= f.number_field :height, class: 'input-mini' %></div>
  </div>
  <div class=control-group>
    <%= f.label 'Male?', class: 'control-label' %>
    <div class=controls><%= f.check_box :male_p %></div>
  </div>
  <div class=form-actions>
    <%= f.button 'Done', class: 'btn  btn-primary' %>
    <%= link_to 'Cancel', people_path, class: 'btn' %>
  </div>
<% end %>
