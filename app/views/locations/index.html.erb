<h4>Listing locations</h4>
<%= link_to 'New location', new_location_path %>

<% if @locations.any? %>
  <%= paginate @locations %>
  <table class='table  table-condensed'>
    <thead><tr>
      <th>Name</th>
    </tr></thead>
    <tbody><%= render @locations %></tbody>
  </table>

<% else %>
  <h5>None</h5>
<% end %>
