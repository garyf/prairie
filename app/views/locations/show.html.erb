<ul class='nav  nav-pills'>
  <li><%= link_to 'Edit', edit_location_path(@location) %></li>
  <li class='active'><a>Location</a></li>
  <li><%= link_to 'Index', locations_path %></li>
</ul>

<dl class=dl-horizontal>
  <dt>Name</dt>
  <dd><%= @location.name %></dd>
</dl>
<dl class=dl-horizontal>
  <dt>Description</dt>
  <dd><%= @location.description %></dd>
</dl>

<% if @field_sets.any? %>
  <h4>Custom field sets</h4>
  <% @field_sets.each do |o| %>
    <% if o.enabled? %>
      <%= render partial: 'field_sets/values_for_parent', locals: {
        o: o,
        parent_id: @location.id} %>
    <% end %>
  <% end %>
<% end %>
